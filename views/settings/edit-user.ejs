<% layout("layouts/boilerplate") %>
<div class="row">
    <div class="col-2 col-sm-1">
        <a class="btn btn-danger align-self-start" href="/settings">
            <span class="oi oi-arrow-thick-left" title="arrow thick left" aria-hidden="true"></span>
        </a>
    </div>
    <div class="col">
        <h2 class="text-center">Edit User</h2>
    </div>
    <div class="col-2 col-sm-1"></div>
</div>
<hr>
<form action="/settings/edit-user" method="POST" class="validated-form" novalidate>
    <div class="mb-3">
        <label class="form-label h4" for="name">Name</label>
        <input class="form-control" type="text" id="name" name="name" value="<%= user.name %>" required>
    </div>
    <div class="mb-3">
        <label class="form-label h4" for="email">Email</label>
        <input class="form-control" type="email" id="email" name="email" value="<%= user.email %>" required>
    </div>
    <div class="mb-3">
        <label class="form-label h4" for="businessName">Business Name</label>
        <input class="form-control" type="text" id="businessName" name="businessName" value="<%= user.businessName %>" required>
    </div>
    <div class="mb-3 text-center">
        <button class="btn btn-primary btn-lg">Save</button>
    </div>
</form>