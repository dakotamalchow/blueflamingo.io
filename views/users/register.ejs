<% layout("layouts/boilerplate") %>
<main class="container">
    <h1>Blue Flamingo</h1>
    <h2>Register</h2>
    <form action="/register" method="POST">
        <div class="mb-3">
            <label class="form-label" for="name">Name</label>
            <input class="form-control" type="text" id="name" name="name" placeholder="John Smith" required>
        </div>
        <div class="mb-3">
            <label class="form-label" for="businessName">Business Name</label>
            <input class="form-control" type="text" id="businessName" name="businessName" placeholder="J. Smith Corp">
        </div>
        <div class="mb-3">
            <label class="form-label" for="email">Email</label>
            <input class="form-control" type="text" id="email" name="email" placeholder="johnsmith@gmail.com" required>
        </div>
        <div class="mb-3">
            <label class="form-label" for="password">Password</label>
            <input class="form-control" type="password" id="password" name="password" required>
        </div>
        <div class="mb-3">
            <button class="btn btn-primary">Continue</button>
        </div>
    </form>
</main>