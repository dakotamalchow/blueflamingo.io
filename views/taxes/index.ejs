<% layout("layouts/boilerplate") %>
<h2>Taxes</h2>
<hr>
<form action="" method="GET" id="filter-and-sort">
    <div class="row">
        <a class="col sortCol" data-query="description">Descripton</a>
        <a class="col sortCol" data-query="amount">Amount</a>
    </div>
</form>
<hr>
<div class="mb-3">
    <% if(taxes.length == 0){ %> 
        <p>Currently no taxes. Click the button below to create a tax.</p>
    <% } %>
    <% for(let tax of taxes){ %>
        <a href="/taxes/<%= tax._id %>">
            <div class="row">
                <div class="col"><%= tax.description %></div>
                <div class="col"><%= tax.amount %>%</div>
            </div>
        </a>
        <hr>
    <% } %>
</div>
<div class="text-right sticky-bottom">
    <a class="mt-3 btn btn-primary btn-lg" href="/taxes/new">Create New Tax</a>
</div>
<% block("scripts").append('<script src="/js/filter-and-sort-index.js"></script>') %>