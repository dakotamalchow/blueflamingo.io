<% layout("layouts/boilerplate") %>
<h2>Customers</h2>
<hr>
<% if(stripeCustomers.length == 0){ %> 
    <p>Currently no customers. Click the button below to create a customer.</p>
<% } %>
<% for(let stripeCustomer of stripeCustomers){ %>
    <a href="/customers/<%= stripeCustomer.metadata.customerId %>">
        <p><%= stripeCustomer.name %> - <%= stripeCustomer.email %></p>
    </a>
    <hr>
<% } %>
<a class="btn btn-primary btn-lg fixed-bottom-right" href="/customers/new">Create New Customer</a>