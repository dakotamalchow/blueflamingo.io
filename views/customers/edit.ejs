<% layout("layouts/boilerplate") %>
<main class="container">
    <h2>Edit Customer</h2>
    <hr>
    <form action="/customers/<%= stripeCustomer.metadata.customerId %>" method="POST">
        <div class="mb-3">
            <label class="form-label" for="name">Name</label>
            <input class="form-control" type="text" id="name" name="name" value="<%= stripeCustomer.name %>" required>
        </div>
        <div class="mb-3">
            <label class="form-label" for="email">Email</label>
            <input class="form-control" type="email" id="email" name="email" value="<%= stripeCustomer.email %>" required>
        </div>
        <div class="mb-3 text-center">
            <a class="btn btn-danger" href="/customers/<%= stripeCustomer.metadata.customerId %>">Cancel</a>
            <button class="btn btn-primary">Save</button>
        </div>
    </form>
</main>